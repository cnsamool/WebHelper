<SCRIPT language=JavaScript1.2>
function applyit(){
var temp;
if (cur!="x")
temp='<META http-equiv="Page-Enter" CONTENT="RevealTrans(Duration=4,Transition='+cur+')">'
else
temp='<meta http-equiv="Page-Enter" content="blendTrans(Duration=4.0)">'
js_1.value=temp
}
</SCRIPT>
