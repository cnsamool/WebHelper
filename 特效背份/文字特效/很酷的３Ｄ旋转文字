<SCRIPT language=VBScript>
Sub Window_OnLoad()
    call SG1.Scale(0.50, 0.50, 0.50)
    call SG4.Scale(0.50, 0.50, 0.50)
    call SG1.Rotate(0, 6, 0)
    RotateAll
end sub

' sets rotation speed and behavior as well as creating loop

Sub RotateAll
    Call SG1.Rotate(0,4,0)//(角度,摆动速度,速度)调整这里的参数可以改变效果
    Call SG4.Rotate(0,4,0)//(角度,摆动速度,速度)
    FILK = Window.SetTimeOut("Call RotateAll", 10, "VBSCript")
End Sub

<!-- 使用说明：使用时将文字换成你需要的文字即可！-->
</SCRIPT>

<!--以下内容是改变字本的样式-->
