		return "yellow";
	else if (backgroundcolor == 12 )
		return "aqua";
	else if (backgroundcolor == 13 )
		return "black";
	else if (backgroundcolor == 14 )
		return "white";
	else if (backgroundcolor == 15 )
		return "silver";
	}
