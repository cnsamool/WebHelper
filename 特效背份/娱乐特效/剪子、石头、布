<body>
 

<SCRIPT LANGUAGE="JavaScript">

function playGame(choice) {
with (document.game) {
comp = Math.round((Math.random() * 2) + 1);
var choicename;
if (comp == 1) choicename = "石头";
if (comp == 2) choicename = "布";
if (comp == 3) choicename = "剪子";
msg.value = '计算机选择的是 ' + choicename + ';  ';

switch(choice) {
case 1 :
         if (comp == 1) {  draw.value++; msg.value += '平局.'; break; }
         if (comp == 2) {  loss.value++;  msg.value += '你输了!';     break; }
         if (comp == 3) {  win.value++; msg.value += '你赢了!';      break; }
case 2 :
         if (comp == 1) {  win.value++;  msg.value += '你赢了!';      break; }
         if (comp == 2) {  draw.value++; msg.value += '平局.'; break; }
         if (comp == 3) {  loss.value++; msg.value += '你输了!';     break; }
case 3 :
         if (comp == 1) {  loss.value++;  msg.value += '你输了!';     break; }
         if (comp == 2) {  win.value++; msg.value += '你赢了!';      break; }
         if (comp == 3) {  draw.value++; msg.value += '平局.'; break; }
      }
      msg.value += '  再来!';
   }
}
</script>
<center>
<form name=game>
<table border=1 cellpadding=5>
<tr>
<td align=center>您的选择</td>
<td align=center><a href="javascript:void(0);" onClick="playGame(1);"><img src="rock.gif" width=29 height=23 border=0></a></td>
<td align=center><a href="javascript:void(0);" onClick="playGame(2);"><img src="paper.gif" width=29 height=23 border=0></a></td>
<td align=center><a href="javascript:void(0);" onClick="playGame(3);"><img src="scissors.gif" width=29 height=23 border=0></a></td>
</tr>
<tr>
<td colspan=4 align=center><input type=text name=msg size=45></td>
</tr>
<tr>
<td colspan=4 align=center>
<input type=text name=win readonly value="0" size="2"> 赢
<input type=text name=loss readonly value="0" size="2"> 输
<input type=text name=draw readonly value="0" size="2"> 平

</td>
</tr>
</table>
</form>
点击相应图标开始比赛
</center>

